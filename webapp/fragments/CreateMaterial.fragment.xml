<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog id="idDialog" title="Enter Material Details">
        <f:SimpleForm
            id="createMaterialForm"
            editable="true"
            layout="ResponsiveGridLayout"
            title=""
            labelSpanXL="12"
            labelSpanL="12"
            labelSpanM="12"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="12"
            columnsL="12"
            columnsM="12"
            singleContainerFullSize="false"
        >
            <Label id='materialID' text="Material ID" />
            <Input id="materialIDInput" placeholder="Enter Material ID" />

            <Label id='materialDesc' text="Material Description" />
            <Input id="materialDescInput" placeholder="Enter Material Description" />

            <Label id='materialType' text="Material Type" />
            <Input id="materialTypeInput" placeholder="Enter Material Type" />

            <Label id='materialActiveFlag' text="Active Flag" />
            <Select id="materialActiveFlagInput">
                <items>
                    <core:Item id="activeFlag" text="Active" key="X" />
                    <core:Item id="inactiveFlag" text="Inactive" key="" />
                </items>
            </Select>
        </f:SimpleForm>

        <HBox id='hboxButton' justifyContent="End">
            <Button id='create' text="{i18n>create}" width="100px" type="Emphasized" press=".onCreate" class="sapUiTinyMarginEnd" />
            <Button id='cancel' text="{i18n>cancel}" width="100px" type="Emphasized" press=".onCancel" class="sapUiTinyMarginEnd" />
        </HBox>
    </Dialog>
</core:FragmentDefinition>
